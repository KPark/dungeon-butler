div(ng-controller="class-controller" style="height: 100%;")
    .class_select(style="height: 100%;")
        table(style="width: 100%; height: 100%; vertical-align: top;")
            thead
                tr
                    table.ui-widget-header(style="width: 100%;")
                        tr
                            td(style="text-align: left;")
                                jq-button(ng-click="getNextClass($index - 1)" id="previous-race-button" value="Previous")
                            td(style="text-align: middle")
                                jq-button(id="select-race-button" value="Select")
                            td(style="text-align: right;")
                                jq-button(ng-click="getNextClass($index + 1)" id="next-race-button" value="Next")
            tbody
                tr(style="overflow: auto; vertical-align: top;")
                    table(style="width: 100%")
                        tr
                            td(colspan=2)
                                h2.ui-widget-header {{currentClass.name}}
                        tr
                            td(style="vertical-align: top;")
                                h3.ui-widget-header Builds
                                span(ng-repeat="build in currentClass.builds")
                                    jq-button(ng-click="pickBuild(build, t)" ng-bind="build.name" style="padding: 1em; font-size: 0.8em;")
                            td(rowspan="2" style="padding-right: 1em; vertical-align: top;")
                                table(style="width: 100%;")
                                    tr
                                        td.ui-widget-header(style="text-align: right;") Power Source
                                        td.ui-state-active {{currentClass.powerSource}}
                                    tr
                                        td.ui-widget-header(style="text-align: right;") Armor Proficiencies
                                        td.ui-state-active
                                            span(ng-repeat="armor in currentClass.armorProficiencies") {{armor.name}}
                                                br
                                    tr
                                        td.ui-widget-header(style="text-align: right;") Weapon Proficiencies
                                        td.ui-state-active
                                            span(ng-repeat="weapon in currentClass.weaponProficiencies") {{weapon.name}}
                                                br
                                    tr
                                        td.ui-widget-header(style="text-align: right;") Implements
                                        td.ui-state-active
                                            span(ng-repeat="implement in currentClass.implements") {{implement.name}}
                                                br
                                    tr
                                        td.ui-widget-header(style="text-align: right;") Skills
                                        td.ui-state-active
                                            div(style="height: 5em; overflow: auto;")
                                                span(ng-repeat="skill in currentClass.skills") {{skill.name}}
                                                    br
                                    tr
                                        td.ui-widget-header(style="text-align: right;") Class Powers
                                        td.ui-state-active
                                            span(ng-repeat="power in currentClass.powers") {{power.name}}
                                            br
                                    tr
                                        td.ui-widget-header(style="text-align: right;") Hit Points
                                        td.ui-state-active {{currentClass.hitPoints.base}} + {{currentClass.hitPoints.score}} Score
                                            br
                                            span {{currentClass.hitPoints.level}} Per Level
                                    tr
                                        td.ui-widget-header(style="text-align: right;") Healing Surges
                                        td.ui-state-active {{currentClass.healingSurge.base}} + {{currentClass.healingSurge.modifier}} Modifier
            tfoot
                tr(style="vertical-align: bottom;")
                    td
                        div(style="margin-top: 1em;")
                            span.controls(ng-repeat="t in classes" style="height: 2em;")
                                jq-button(ng-click="goToClass(t.name)" ng-bind="t.name" style="width: 15%;")